# Use Node.js as the base image
FROM node:20

# Set the working directory
WORKDIR /app/client

# Copy client package.json and package-lock.json
COPY client/package*.json ./

# Install dependencies
RUN npm install --legacy-peer-deps

# Copy entire client folder
COPY client/ .

# Build React app (for potential future use or artifact)
RUN npm run build

# This image is now just for build verification
# No need to expose a port or start a server
CMD ["echo", "Client build completed"]